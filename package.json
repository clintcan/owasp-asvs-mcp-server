{
  "name": "owasp-asvs-mcp-server",
  "version": "1.0.0-beta.0",
  "description": "MCP server for OWASP Application Security Verification Standard (ASVS)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "owasp-asvs-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "prepare": "npm run build",
    "update-asvs": "node scripts/update-asvs-data.js",
    "test:phase1": "node test-phase1.js",
    "test:phase2": "node test-phase2.js",
    "test:phase3": "node test-phase3.js",
    "test:all": "npm run test:phase1 && npm run test:phase2 && npm run test:phase3"
  },
  "keywords": [
    "mcp",
    "owasp",
    "asvs",
    "security",
    "verification"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}